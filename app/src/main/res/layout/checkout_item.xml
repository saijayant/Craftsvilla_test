<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    android:padding="6dp">


    <android.support.v7.widget.CardView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:elevation="6dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/colorView"
            android:layout_width="100dp"

            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/add_four"
            android:scaleType="fitXY" />




    </android.support.v7.widget.CardView>



    <ImageView
        android:id="@+id/delete"
        android:layout_width="24dp"

        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:background="@drawable/ic_delete_black_24dp"
        android:scaleType="fitXY" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/image"
        android:orientation="vertical">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:maxLines="1"
            android:text="Roasted Garlic Chicken"
            android:textColor="#515151"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/veg_nonvej"
                android:layout_width="10dp"

                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@drawable/nonveg"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:fontFamily="sans-serif-light"
                android:text=" Continental Non-Vegetarian "
                android:textSize="10sp" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/price_original"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_margin="2dp"

        android:fontFamily="sans-serif-light"
        android:text=" Amount toatl "
        android:textSize="10sp" />

    <TextView
        android:id="@+id/price_original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif"

        android:gravity="start"
        android:text="â‚¹202"
        android:textColor="#ec9201"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quantity"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:fontFamily="sans-serif-light"
        android:text=" Select Quantity "
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/number_button"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            app:backGroundColor="@color/orange"
            app:textSize="8sp" />
    </LinearLayout>


</RelativeLayout>