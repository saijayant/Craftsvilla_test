<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/veg_nonvej"
            android:layout_width="15dp"

            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@drawable/veg"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:fontFamily=""
            android:layout_gravity="center"
            android:text="Continental Vegetarian"/>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="6dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/colorView"
            android:layout_width="match_parent"

            android:layout_height="220dp"
            android:layout_gravity="center"
            android:background="@drawable/add_four"
            android:scaleType="fitXY"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="start"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:fontFamily="sans-serif"
        android:gravity="start"
        android:maxLines="1"
        android:text="Roasted Garlic Chicken"
        android:textColor="#515151"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="6dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotel_name"
            android:layout_gravity="bottom"
            android:layout_marginRight="4dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="₹404"
            android:textColor="#585858"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/price_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotel_name"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:text="₹202"
            android:textColor="#262626"
            android:textSize="17sp"
            />
    </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">



        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"

            android:background="@drawable/today_flight"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:maxLines="1"
            android:padding="4dp"
            android:text=" Add to cart "
            android:textColor="#fff"
            android:textSize="14sp" />




    </RelativeLayout>

</LinearLayout>